---
import Image from "astro/components/Image.astro";
import HeroImage from "../../public/hero.webp";
import { Icon } from "astro-icon/components";
---

<section id="contacto" class="flex flex-col justify-center items-center p-2">
  <h2 class="md:text-4xl text-3xl font-bold text-gray-900 mb-10 tracking-tight">
    Contacto
  </h2>
  <form id="contact-form" class="space-y-4">
    <input
      type="text"
      name="nombre"
      placeholder="Nombre"
      required
      class="w-full border border-zinc-300 px-3 py-2"
    />

    <textarea
      name="mensaje"
      placeholder="Describe brevemente tu caso"
      required
      class="w-full border border-zinc-300 px-3 py-2"></textarea>

    <div
      class="flex gap-1.5 items-center p-4 border-2 w-fit rounded-2xl bg-green-600 text-slate-50"
    >
      <Icon name="mdi:whatsapp" class="w-5 h-5" />
      <a href="https://wa.me/+522222758027"> Enviar mensaje</a>
    </div>
  </form>
</section>
